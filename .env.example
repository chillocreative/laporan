# =============================================================================
# Sistem Pelaporan - Environment Configuration
# Malaysian Government Reporting System
# =============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Sistem Pelaporan"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://laporan.example.gov.my
APP_TIMEZONE=Asia/Kuala_Lumpur

APP_LOCALE=ms
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ms_MY

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12

# Sanctum SPA authentication (comma-separated domains that can make stateful requests)
SANCTUM_STATEFUL_DOMAINS=laporan.example.gov.my
SESSION_DOMAIN=.example.gov.my

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_DAILY_DAYS=30

# -----------------------------------------------------------------------------
# Database (MySQL - Production)
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=sistem_pelaporan
DB_USERNAME=laporan
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Docker MySQL root password (used only by docker-compose)
DB_ROOT_PASSWORD=

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_PREFIX=laporan_

# -----------------------------------------------------------------------------
# Cache
# -----------------------------------------------------------------------------
CACHE_STORE=redis
# CACHE_PREFIX=laporan_cache_

# -----------------------------------------------------------------------------
# Session
# -----------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# -----------------------------------------------------------------------------
# Queue
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=database

# -----------------------------------------------------------------------------
# Filesystem
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

# -----------------------------------------------------------------------------
# Mail (SMTP - Production)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.example.gov.my
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="noreply@laporan.example.gov.my"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_EHLO_DOMAIN=laporan.example.gov.my

# -----------------------------------------------------------------------------
# OpenAI (Managed via Settings table in Super Admin panel)
# These are fallback defaults only; actual values come from the database.
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000
OPENAI_DAILY_LIMIT=100
OPENAI_TIMEOUT=60

# -----------------------------------------------------------------------------
# reCAPTCHA (Managed via Settings table in Super Admin panel)
# These are fallback defaults only; actual values come from the database.
# -----------------------------------------------------------------------------
# RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=

# -----------------------------------------------------------------------------
# AWS (optional, if using S3 for file storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# Docker / Nginx Ports (used by docker-compose.yml)
# -----------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# -----------------------------------------------------------------------------
# Vite (passed to front-end build)
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
